{
    "extends": [
        "react-app",
        "react-app/jest"
    ],
    "plugins": [
        "prettier"
    ],
    "rules": {
        "prettier/prettier": [
            "warn",
            {
                "endOfLine": "auto"
            }
        ],
        "react-hooks/exhaustive-deps": "off",
        "react/self-closing-comp": [
            "error",
            {
                "component": true
            }
        ]
    },
    "overrides": [
        {
            "files": [
                "**/*.stories.*"
            ],
            "rules": {
                "import/no-anonymous-default-export": "off"
            }
        }
    ]
}
